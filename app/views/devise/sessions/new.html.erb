<div class='signup-form-title'>
  <%= nav_link_to 'Log in' ,new_user_session_path, class: 'login-header-form login-a' %>
  <%= nav_link_to 'Sign up' ,new_user_registration_path, class: 'login-header-form login-b' %>
</div>

<div class="form">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, placeholder: 'Email', class: 'email-field input' %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "off", placeholder: 'Password', class: 'password-field input' %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me, class: 'check_box' %>
      <%= f.label :remember_me , class: 'checkbox_label' %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", class: 'signin-submit submit'  %>
  </div>
<% end %>

</div>
