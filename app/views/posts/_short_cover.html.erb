<div class="short-hero-cover">
                <div class="blue-img-cover"></div>
                
           <% if current_page?('/profile') %>
           	<%= image_tag('blurred-cover-photo', class: 'cover-photo-img') %> 
           <% elsif params[:name].present?%>
           	<%= image_tag(params[:name].downcase , class: 'cover-photo-img category-cover') %> 
	           <div class="hero-phrase">
	              	<h1><%= @title %> </h1>
		          <div class="shuffle-category">
		          		<%= link_to posts_shuffle_path(p: params[:name].titleize) do %>
		          			<h2>Shuffle <%= params[:name] %></h2>
		          		<% end %>
		          </div>
	          </div>
	 <% else %>
           	<%= image_tag('blurred-cover-photo', class: 'cover-photo-img') %> 
	           <div class="hero-phrase">
	           	<h1><%= @title %> </h1>
	          	</div>
            <% end %>
</div>