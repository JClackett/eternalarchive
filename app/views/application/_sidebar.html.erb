 <div class="sidebar area" data-sidebar >  
            <ul>
                  <!-- Login Section -->

                 <% if user_signed_in? %>
                      <div class="sidebar-gravatar login-links">
                             <%= link_to profile_path do %>
                                  <%= gravatar_image_tag(current_user.email.gsub('spam', 'mdeering'), :alt => current_user.username) %>
                              <% end %>
                      </div>
                      <li class="login-links username-sidebar"><p><%= current_user.username %></p></li>
                      <li class="login-links"><%= link_to 'LOGOUT', destroy_user_session_path, method: :delete %></li>
                  <% else %>
                      <li class="login-links"><%= link_to "SIGN IN / SIGN UP" , new_user_session_path%></li>
                  <% end %>
                
                  <!-- Nav Button Section -->


                 <li class="user-links"><%= nav_link_to 'LATEST' , posts_mostrecent_path  %></li>
                 <li class="user-links"><%= nav_link_to 'MOST LIKED' , posts_mostliked_path  %></li>
                 <li class="user-links">
                       <% if params[:p] == "shuffle" %>
                            <%= nav_link_to 'SHUFFLE AGAIN!' , posts_shuffle_path(p: "shuffle")  %>
                       <% else %>
                            <%= nav_link_to 'SHUFFLE!' , posts_shuffle_path(p: "shuffle")  %>
                       <% end %>
                 </li>

                  <!-- Contribute Section -->

                  <li class="contribute-link"><%= link_to 'CONTRIBUTE', submit_path %></li>

                  <!-- Admin Section -->

                 <% if current_user.try(:admin?) %>
                      <li class="admin-links"><%= link_to 'NEW POST' , new_post_path  %></li>
                      <li class="admin-links"><%= link_to 'NEW CATEGORY' , new_category_path  %></li>
                      <li class="admin-links"><%= link_to 'CONTRIBUTIONS' , contributions_path  %></li>
                  <%end%>


                  <!-- Static Section -->
                  <div class="static-section">
                      <li class="static-links"><%= nav_link_to 'ABOUT', application_about_path %></li>
                      <li class="static-links"><%= nav_link_to 'COPYRIGHT', application_copyright_path %> </li>
                  </div>
            </ul>
</div>