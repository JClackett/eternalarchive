<div class="login-section">
  <% if user_signed_in? %>
            <div class="current-user">   
              <%= gravatar_image_tag(current_user.email.gsub('spam', 'mdeering'), :alt => current_user.username) %>
            </div>
              <div class="user-popup-sidebar">
                    <ul>
                      <li><p class="popup-username"><%= current_user.username %></p></li>
                      <li><%= nav_link_to 'Profile', profile_path %></li>
                      <li><%= link_to 'Logout', destroy_user_session_path, method: :delete %></li>
                    </ul>
              </div>
    <%else%>
          <%= link_to "Sign in / Sign up" , new_user_session_path,  class: 'user-login' %>
    <% end %>
</div> 